<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FerApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color (Celeste claro). -->
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryVariant">@color/blue_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color (Celeste suave). -->
        <item name="colorSecondary">@color/soft_blue</item>
        <item name="colorSecondaryVariant">@color/soft_blue_variant</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color (para mantener consistencia con los tonos). -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>
</resources>
